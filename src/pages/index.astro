---
import "../global.css";
---

<!doctype html>
<html lang="en" data-theme="valentine">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Валентинка</title>
    <link href="../global.css" rel="stylesheet" />
  </head>
  <body>
    <div class="element-site">
      <div class="card card-compact w-96 bg-base-100 shadow-xl card1">
        <figure>
          <img
            style="width: 100%;"
            src="https://img.freepik.com/premium-vector/cute-teddy-bear-with-a-red-hear-teddy-bear-with-hearts-illustration-for-valentine-s-day-or-birthday_423614-259.jpg"
            alt="Shoes"
          />
        </figure>
        <div class="card-body">
          <h2 class="card-title">Ця валентинка УЛЮБЛЕНІЙ МАМІ!</h2>
          <div style="padding-top: 5%" class="card-actions justify-end">
            <button class="btn btn-primary btn-block next-button" id="yesButton"
              >Далі</button
            >
          </div>
        </div>
      </div>
      <div
        class="card card-compact w-96 bg-base-100 shadow-xl"
        style="display: none;"
      >
        <div class="card-body">
          <figure>
            <img
              style="width: 100%;"
              src="data:image/jpeg;base64,"
              alt="Shoes"
            />
          </figure>
          <h2 class="card-title">Ти сама найкраща мама на світі ❤️</h2>
          <div style="padding-top: 5%" class="card-actions justify-end">
            <button class="btn btn-primary btn-block next-button" id="yesButton"
              >Далі</button
            >
          </div>
        </div>
      </div>

      <div
        class="card card-compact w-96 bg-base-100 shadow-xl"
        style="display: none;"
      >
        <figure>
          <img
            style="width: 100%;"
            src="https://bestflowers.com.ua/image/cache/800-800/data/demo/Gift/BF-24.jpg"
            alt="Shoes"
          />
        </figure>
        <div class="card-body">
          <h2 class="card-title">Я тебе дуже люблю!!!!❤️</h2>
          <div style="padding-top: 5%" class="card-actions justify-end">
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

<script>
  const nextButtons = document.querySelectorAll(".next-button");
  const cards = document.querySelectorAll(".card");

  nextButtons.forEach((button, index) => {
    button.addEventListener("click", () => {
      cards[index].style.display = "none";
      const nextIndex = (index + 1) % cards.length; // Loop back to the first card if reaching the end
      cards[nextIndex].style.display = "block";
    });
  });

</script>

<style>
  .element-site {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100vh;
    margin: 0;
  }
  audio {
    position: absolute;
    top: 0;
    width: 100%;
  }
</style>
